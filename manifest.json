{
  "name": "Chameleon",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Chameleon cursor that changes color on hover",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "test.html",
    "default_title": "Chameleon"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
       "32": "extension_icon32.png"
    }
}
